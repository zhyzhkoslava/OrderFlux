FROM dunglas/frankenphp:1.9.1-php8.4-alpine

# Copy composer from official image
COPY --from=composer:2.8.5 /usr/bin/composer /usr/bin/

# Install system dependencies
RUN \
    set -ex && \
    apk update && \
    apk add --no-cache \
        git \
        nodejs \
        npm \
        postgresql-dev \
        libzip-dev \
        libpng-dev \
        libjpeg-turbo-dev \
        freetype-dev \
        icu-dev \
        jpegoptim \
        optipng \
        pngquant \
        gifsicle \
        libavif \
        supervisor \
        linux-headers \
        build-base \
        autoconf \
        cmake \
        make

# Install and configure PHP extensions
RUN \
    docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-configure zip && \
    docker-php-ext-install -j$(nproc) \
        pdo_pgsql \
        zip \
        gd \
        intl \
        exif \
        sockets \
        pcntl && \
    pecl install redis && \
    docker-php-ext-enable redis

# Install Xdebug and PCOV for development
RUN pecl install xdebug pcov && \
    docker-php-ext-enable xdebug pcov

# Configure PHP settings
RUN echo "memory_limit = 512M" >> /usr/local/etc/php/conf.d/memory-limit.ini

# Configure Xdebug for development
RUN echo "xdebug.mode=debug,coverage" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini && \
    echo "xdebug.start_with_request=yes" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini && \
    echo "xdebug.client_host=host.docker.internal" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini && \
    echo "xdebug.client_port=9003" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini && \
    echo "xdebug.discover_client_host=true" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini && \
    echo "xdebug.idekey=PHPSTORM" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini

# Configure PCOV for coverage (alternative to Xdebug)
RUN echo "pcov.enabled=1" >> /usr/local/etc/php/conf.d/docker-php-ext-pcov.ini && \
    echo "pcov.directory=/var/www" >> /usr/local/etc/php/conf.d/docker-php-ext-pcov.ini

# Install Node.js tools
RUN npm install -g corepack
RUN corepack enable && corepack prepare yarn@4.10.3 --activate

# Copy supervisor configuration
COPY docker/php/supervisord/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Set working directory
WORKDIR /var/www

# Expose ports for HTTP, HTTPS, HTTP/3, and Vite dev server
EXPOSE 80 443 443/udp 5173

# Use supervisor as entrypoint to manage multiple processes
ENTRYPOINT ["supervisord", "--nodaemon", "--configuration", "/etc/supervisor/conf.d/supervisord.conf"]
